<% if !show_title? %>
  <% title "Usuarios" %>
  <center>
    <%= form_tag(school_users_path(@school), :method => :get, :autocomplete => "off") do  %>
      <%= text_field_tag :q, params[:q], :id => "search_field" %>
      <%= submit_tag "Buscar", :name => nil %>
    <% end %>
  </center>
<% end %>


<table id="box-table-a">
  <% if can? :create, @school => User %>
    <tr>
      <td colspan="100">
	<%= link_to "Crear Usuario", new_school_user_path(@school) %>
      </td>
    </tr>
  <% end %>
  <tr>
    <th>User</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th></th>
  </tr>
  <% if @users.empty? %>
    <tr>
      <td colspan="6" align="center"><i>No existen usuarios</i></td>
    </tr>
  <% end %>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td coslpan=3>
  	<%= link_to "Show", school_user_path(user.school,user) %>
	<%= link_to "Edit", edit_school_user_path(user.school,user) %>
        <%= link_to "Destroy", school_user_path(user.school,user), :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
