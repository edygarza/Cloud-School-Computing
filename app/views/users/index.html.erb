<%
  if !show_title?
    title "Usuarios"
  end 
%>

<table id="box-table-a">
  <% if can? :create, @school => User %>
    <tr>
      <td colspan="100">
	<%= link_to "Crear Usuario", new_school_user_path(@school) %>
      </td>
    </tr>
  <% end %>
  <tr>
    <th>User</th>
    <th>First Name</th>
    <th>Last Name</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= link_to "Show", school_user_path(user.school,user) %></td>
      <td><%= link_to "Edit", edit_school_user_path(user.school,user) %></td>
      <td><%= link_to "Destroy", school_user_path(user.school,user), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
