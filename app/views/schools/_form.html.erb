<%= form_for @school do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :zip_code %><br />
    <%= f.text_area :zip_code %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_area :country %>
  </p>
  <p>
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone %>
  </p>
  <p><%= f.submit %></p>
<% end %>
